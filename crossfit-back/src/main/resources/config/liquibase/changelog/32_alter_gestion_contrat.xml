<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />

	<property name="floatType" value="real" dbms="postgresql, h2" />
	<property name="floatType" value="float" dbms="mysql, oracle" />


	<changeSet id="201904232307" author="lgangloff">

		<dropColumn tableName="MEMBERSHIP" columnName="information"/>
		<dropColumn tableName="MEMBERSHIP" columnName="resiliation_information"/>

		<createTable tableName="SUBSCRIPTION_CONTRACT_MODEL">

			<column name="id" type="bigint" autoIncrement="${autoIncrement}" >
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="box_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="version_data" type="varchar(16)">
				<constraints nullable="false"/>
			</column>

			<column name="version_format" type="varchar(16)">
				<constraints nullable="false"/>
			</column>

			<column name="json_value" type="clob"/>

			<column name="created_by" type="varchar(100)">
				<constraints nullable="false" />
			</column>
			<column name="created_date" type="timestamp" defaultValueDate="${now}">
				<constraints nullable="false" />
			</column>
			<column name="last_modified_by" type="varchar(50)" />
			<column name="last_modified_date" type="timestamp" />
		</createTable>

		<addForeignKeyConstraint baseColumnNames="box_id"
								 baseTableName="SUBSCRIPTION_CONTRACT_MODEL"
								 constraintName="fk_sub_contract_model_box_id"
								 referencedColumnNames="id"
								 referencedTableName="CROSSFITBOX"/>

		<addColumn tableName="SUBSCRIPTION">
			<column name="subscription_contract_model_id" type="bigint">
				<constraints nullable="true"/>
			</column>
			<column name="price_tax_incl" type="decimal(10,2)">
				<constraints nullable="true"/>
			</column>
		</addColumn>

		<addForeignKeyConstraint baseColumnNames="subscription_contract_model_id"
								 baseTableName="SUBSCRIPTION"
								 constraintName="fk_subscription_sub_contract_model_id_id"
								 referencedColumnNames="id"
								 referencedTableName="SUBSCRIPTION_CONTRACT_MODEL"/>

		<sql>
			update SUBSCRIPTION set price_tax_incl =
				( select price_tax_incl from MEMBERSHIP where id = membership_id);
		</sql>

		<addNotNullConstraint tableName="SUBSCRIPTION" columnName="price_tax_incl" columnDataType="decimal(10,2)"></addNotNullConstraint>


	</changeSet>
</databaseChangeLog>
