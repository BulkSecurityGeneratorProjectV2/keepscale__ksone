<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />

	<property name="floatType" value="real" dbms="postgresql, h2" />
	<property name="floatType" value="float" dbms="mysql, oracle" />


	<changeSet id="201806182243" author="lgangloff">

       	<addColumn tableName="WOD">
			<column name="owner_id" type="bigint">
				<constraints nullable="true" />
			</column>
			<column name="visibility" type="varchar(32)">
				<constraints nullable="true" />
			</column>
		</addColumn>
		
        <addForeignKeyConstraint baseColumnNames="owner_id"
                                 baseTableName="WOD"
                                 constraintName="fk_wod_owner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MEMBER"/>
                                                                  		
		
        <createTable tableName="WOD_SHARE_WITH">
            <column name="wod_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="member_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="wod_id,member_id" tableName="WOD_SHARE_WITH"/>

        <addForeignKeyConstraint baseColumnNames="wod_id"
                                 baseTableName="WOD_SHARE_WITH"
                                 constraintName="fk_wod_share_with_wod_id"
                                 referencedColumnNames="id"
                                 referencedTableName="WOD"/>
                                 
        <addForeignKeyConstraint baseColumnNames="member_id"
                                 baseTableName="WOD_SHARE_WITH"
                                 constraintName="fk_wod_share_with_member_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MEMBER"/>


		<sql dbms="postgresql">
			update WOD
			set visibility = 'PUBLIC', 
				owner_id = subquery.id	
			
			FROM (select id, login FROM member ) AS subquery
			where subquery.login = wod.created_by
		</sql>
		
		<addNotNullConstraint tableName="WOD" columnName="visibility" defaultNullValue="PUBLIC" columnDataType="bigint"/>
		<addNotNullConstraint tableName="WOD" columnName="owner_id" columnDataType="varchar(32)"/>
		
		
	</changeSet>

</databaseChangeLog>
