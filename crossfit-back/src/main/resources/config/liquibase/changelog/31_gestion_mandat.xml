<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />

	<property name="floatType" value="real" dbms="postgresql, h2" />
	<property name="floatType" value="float" dbms="mysql, oracle" />


	<changeSet id="201904131650" author="lgangloff">

		<createTable tableName="MANDATE">

			<column name="id" type="bigint" autoIncrement="${autoIncrement}" >
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="member_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="rum" type="varchar(35)">
				<constraints nullable="false"/>
			</column>

			<column name="ics" type="varchar(64)">
				<constraints nullable="false"/>
			</column>

			<column name="status" type="varchar(255)">
				<constraints nullable="false" />
			</column>

			<column name="iban" type="varchar(34)">
				<constraints nullable="false"/>
			</column>

			<column name="bic" type="varchar(8)">
				<constraints nullable="false"/>
			</column>

			<column name="signature_data_base64" type="clob"/>
			<column name="signature_date" type="TIMESTAMP WITH TIME ZONE" />


			<column name="created_by" type="varchar(100)">
				<constraints nullable="false" />
			</column>
			<column name="created_date" type="timestamp" defaultValueDate="${now}">
				<constraints nullable="false" />
			</column>
			<column name="last_modified_by" type="varchar(50)" />
			<column name="last_modified_date" type="timestamp" />
		</createTable>

		<addForeignKeyConstraint baseColumnNames="member_id"
								 baseTableName="MANDATE"
								 constraintName="fk_mandate_member_id"
								 referencedColumnNames="id"
								 referencedTableName="MEMBER"/>

		<createTable tableName="SUBSCRIPTION_DIRECT_DEBIT">

			<column name="id" type="bigint" autoIncrement="${autoIncrement}" >
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="subscription_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="mandate_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="first_payment_tax_incl" type="decimal(10,2)">
				<constraints nullable="false"/>
			</column>
			<column name="first_payment_method" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="after_date" type="date">
				<constraints nullable="false" />
			</column>
			<column name="at_day_of_month" type="int">
				<constraints nullable="false" />
			</column>
			<column name="amount" type="decimal(10,2)">
				<constraints nullable="false"/>
			</column>

		</createTable>


		<addForeignKeyConstraint baseColumnNames="subscription_id"
								 baseTableName="SUBSCRIPTION_DIRECT_DEBIT"
								 constraintName="fk_sub_direct_deb_subscription_id"
								 referencedColumnNames="id"
								 referencedTableName="SUBSCRIPTION"/>

		<addForeignKeyConstraint baseColumnNames="mandate_id"
								 baseTableName="SUBSCRIPTION_DIRECT_DEBIT"
								 constraintName="fk_sub_direct_deb_mandate_id"
								 referencedColumnNames="id"
								 referencedTableName="MANDATE"/>


		<addColumn tableName="SUBSCRIPTION">
			<column name="subscription_direct_debit_id" type="bigint">
				<constraints nullable="true" />
			</column>
		</addColumn>

		<addForeignKeyConstraint baseColumnNames="subscription_direct_debit_id"
								 baseTableName="SUBSCRIPTION"
								 constraintName="fk_subscription_sub_direct_debit_id"
								 referencedColumnNames="id"
								 referencedTableName="SUBSCRIPTION_DIRECT_DEBIT"/>

		<dropColumn tableName="SUBSCRIPTION" columnName="direct_debit_iban"/>
		<dropColumn tableName="SUBSCRIPTION" columnName="direct_debit_bic"/>
		<dropColumn tableName="SUBSCRIPTION" columnName="direct_debit_first_payment_method"/>
		<dropColumn tableName="SUBSCRIPTION" columnName="direct_debit_first_payment_tax_incl"/>
		<dropColumn tableName="SUBSCRIPTION" columnName="direct_debit_after_date"/>
		<dropColumn tableName="SUBSCRIPTION" columnName="direct_debit_at_day_of_month"/>

	</changeSet>
</databaseChangeLog>
